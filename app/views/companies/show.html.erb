<%= link_to 'Edit', edit_company_path(@company), class: :action %>
<%= link_to 'Delete', company_path(@company), method: :delete, data: { confirm: 'Are you sure?' }, class: [:delete, :action] %>

<dl>
  <dt>Company Name</dt>
  <dd><%= @company.name %></dd>
  <% if @company.has_full_address? -%>
    <dt>Full Address</dt>
    <dd><%= @company.full_address %></dd>
    <dt>City</dt>
    <dd><%= @company.city %></dd>
    <dt>State</dt>
    <dd><%= @company.state %></dd>
    <dt>Zipcode</dt>
    <dd><%= @company.zipcode %></dd>
  <% end -%>
</dl>
